<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1aa3a3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnGoals"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:onClick="btnGoalClick"
        android:text="Goals" />

    <Button
        android:id="@+id/btnAnalysis"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGoals"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#ffffff"
        android:onClick="btnAnalysisClick"
        android:text="Analysis" />

    <Button
        android:id="@+id/btnTheory"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAnalysis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#ffffff"
        android:onClick="btnTheoryClick"
        android:text="Theory" />

    <Button
        android:id="@+id/btnLovelyThinking"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTheory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#ffffff"
        android:onClick="btnLovelyThinkingClick"
        android:text="Lovely Thinking" />

    <Button
        android:id="@+id/btnCharacter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLovelyThinking"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#ffffff"
        android:onClick="btnCharacterClick"
        android:text="Character" />

</RelativeLayout>
