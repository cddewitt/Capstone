<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.cdoit.characterstrengthbuilder.ObstaclesActivity"
    android:onClick="btnObstaclesClick">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:text="Think of the possible obstacles that you may face to reach your wish." />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbxObstacles"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:minHeight="100dp"
        android:background="#b65555"
        android:hint="Enter your possible obstacles here...."
        android:editable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed to Plan"
        android:id="@+id/btnObstaclesToPlan"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="btnObstaclesClick" />
</RelativeLayout>
