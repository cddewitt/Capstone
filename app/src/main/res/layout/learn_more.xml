<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff4e6">

    <TextView
        android:id="@+id/tbxAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="about about about about about about about about about about about about about about about about about about about about about about about aboutabout about about about" />

    <Button
        android:id="@+id/btnTheory"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbxAbout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:onClick="btnTheoryClick"
        android:text="Theory" />

    <Button
        android:id="@+id/btnLovelyThinking"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTheory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="#ffffff"
        android:onClick="btnLovelyThinkingClick"
        android:text="Lovely Thinking" />

    <Button
        android:id="@+id/btnCharacter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLovelyThinking"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="#ffffff"
        android:onClick="btnCharacterClick"
        android:text="Character" />


</RelativeLayout>