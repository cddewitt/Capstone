<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff4e6"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnGoals"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:onClick="btnGoalClick"
        android:text="GOALS" />

    <Button
        android:id="@+id/rateYourselfButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:onClick="rateYourselfButtonClick"
        android:text="Rate Yourself"
        android:layout_below="@+id/btnGoals"
        android:layout_alignStart="@+id/btnGoals" />

    <Button
        android:id="@+id/btnAnalysis"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:onClick="btnAnalysisClick"
        android:text="Self-Analysis"
        android:layout_below="@+id/rateYourselfButton"
        android:layout_alignStart="@+id/rateYourselfButton" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:onClick="btnAboutClick"
        android:text="Theory"
        android:layout_below="@+id/btnAnalysis"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnGraph"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:onClick="btnGraph"
        android:text="Graph"
        android:layout_below="@+id/btnAbout"
        android:layout_alignStart="@+id/btnAbout" />

    <Button
        android:id="@+id/btnLovelyThinking"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="btnLovelyThinkingClick"
        android:text="@string/lovelyThinking"
        android:layout_below="@+id/btnGraph"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        />

    <Button
        android:id="@+id/donateBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLovelyThinking"
        android:layout_centerHorizontal="true"
        android:text="@string/donate"
        android:onClick="btnDonateClick"
        android:background="#ffffff"
        />

</RelativeLayout>
