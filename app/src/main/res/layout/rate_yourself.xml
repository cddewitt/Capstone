                android:layout_alignTop="@+id/zestTextView"
                android:layout_marginRight="45dp"
                android:layout_marginTop="35dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/gratitudeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="420dp"
                android:text="Gratitude"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <SeekBar
                android:id="@+id/gratitudeSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/gratitudeTextView"
                android:layout_below="@+id/gratitudeTextView"
                android:layout_marginRight="100dp"
                android:layout_marginTop="25dp"
                android:progress="0"
                android:max="4" />

            <TextView
                android:id="@+id/gratitudeScoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/gratitudeTextView"
                android:layout_marginRight="45dp"
                android:layout_marginTop="35dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/optimismTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="520dp"
                android:text="Optimism"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <SeekBar
                android:id="@+id/optimismSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/optimismTextView"
                android:layout_below="@+id/optimismTextView"
                android:layout_marginRight="100dp"
                android:layout_marginTop="25dp"
                android:progress="0"
                android:max="4" />

            <TextView
                android:id="@+id/optimismScoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
