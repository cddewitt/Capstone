<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff4e6">

    <TextView
        android:id="@+id/deadlineTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Deadline"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#3c2f2f"
        android:textSize="48dp" />

    <TextView
        android:id="@+id/deadlineDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deadlineTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="Think of how much time it should take you to fulfill your wish with a motivated attitude. Set a date and time by which you plan to have fulfilled your wish."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="28dp" />

    <Button
        android:id="@+id/reviewYourWoopButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:onClick="reviewYourWoopButtonClick"
        android:text="Review Your WOOP" />

    <TextView
        android:id="@+id/setDeadlineTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/separator"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Set a date and time for your deadline:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="20dp" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/deadlineDescriptionTextView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="#c8c8ff" />

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reviewYourWoopButton"
        android:layout_alignLeft="@+id/setDeadlineTextView"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:hint="Enter a date here..."
        android:inputType="date" />

    <EditText
        android:id="@+id/timeEditText"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reviewYourWoopButton"
        android:layout_alignRight="@+id/setDeadlineTextView"
        android:layout_marginBottom="60dp"
        android:layout_toRightOf="@+id/dateEditText"
        android:ems="10"
        android:hint="Enter a time here..."
        android:inputType="time" />

</RelativeLayout>